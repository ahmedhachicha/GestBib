{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie</h1>
    <br>
    <table class="table" border="1">
        <thead>
            <tr>
                <th>#</th>
                <th>Id</th>
                <th>Designation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c,categorie in categories %}
            <tr>
                <td>{{ c+1 }}</td>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.designation }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id})}}">
                        <span class="btn btn-success">
                            <i class="fa fa-eye"></i>
                        </span>
                    </a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id})}}">
                        <span class="btn btn-primary">
                            <i class="fa fa-pencil"></i>
                        </span>
                    </a>
                    <a href="{{ path('categorie_delete', {'id': categorie.id})}}">
                        <span class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </span>
                    </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('categorie_new')}}">
                        <span class="btn btn-primary">
                            <i class="fa fa-plus"></i>
                        </span>
    Ajouter une categorie
{% endblock %}
