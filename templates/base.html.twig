            </div>
            {{ include ('footer.html.twig') }}
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>

        <!-- JS Scripts-->
        <!-- jQuery Js -->
        <script src="{{ asset('js/jquery-1.10.2.js') }}></script>
        <!-- Bootstrap Js -->
        <script src="{{ asset('js/bootstrap.min.js') }}></script>
        <!-- Metis Menu Js -->
        <script src="{{ asset('js/jquery.metisMenu.js') }}></script>
        <!-- Custom Js -->
        {% block javascripts %}{% endblock %}
